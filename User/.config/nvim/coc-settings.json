{
  // Comments are allowed in this JSONC file
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  // Path for eslint config file starts from home directory
  "eslint.options": { "configFile": ".eslintrc.json" },
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  // Fix bug with visual fragments of floating window remaining after ctrl-c
  "list.normalMappings": {
    "<C-c>": "do:exit"
  },
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  //
  // Changing Prettier settings requires :CocReload
  // https://github.com/neoclide/coc.nvim/issues/1595
  "prettier.useTabs": false,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  //
  // Presence of .editorconfig file overrides all coc-prettier settings.
  // quote_type = single, double, or auto doesn't seem fine-grained enough
  // to capture my preference for 'all single quotes except JSX'.
  // coc-prettier's list of priority overrides:
  // https://github.com/neoclide/coc-prettier#prettiers-settings
  // https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
  //
  "prettier.singleQuote": true,      // Use single quotes everywhere,
  "prettier.jsxSingleQuote": false,  // except inside JSX (for HTML attributes)
  "prettier.jsxBracketSameLine": true,
  "prettier.arrowParens": "always",
  "prettier.parser": "babel",
  "prettier.proseWrap": "preserve",
  "prettier.semi": true,
  // Use IntelliSense engine, not VS Code's Python Analysis Engine
  "python.jediEnabled": true,
  "python.linting.pylintEnabled": true,
  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  }
}
