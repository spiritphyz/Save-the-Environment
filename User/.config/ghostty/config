#custom-shader   = shaders/just-snow.glsl
custom-shader   = shaders/cursor_blaze.glsl
theme           = Monokai Pro Ristretto

# Use prerelease builds
auto-update-channel = tip

copy-on-select          = clipboard
mouse-hide-while-typing = true

font-family = Iosevka Nerd Font
font-size   = 14

# Disable ligatures
font-feature = -calt
font-feature = -liga
font-feature = -dlig

window-padding-y = 2
window-padding-x = 4

# Follow Tmux convention for horiz, vert splits
keybind = alt+super+'=new_split:down
keybind = alt+super+5=new_split:right

keybind = super+k=goto_split:top
keybind = super+j=goto_split:bottom
keybind = super+h=goto_split:left
keybind = super+l=goto_split:right

# Equalize splits with cmd+alt+w, then press 'e'
keybind = shift+super+k=resize_split:up,10
keybind = shift+super+j=resize_split:down,10
keybind = shift+super+h=resize_split:left,10
keybind = shift+super+l=resize_split:right,10
